-# in app/views/users/show.html.haml
%div.profile-container
  %div.profile-image
    = image_tag("BasicProfilePic.png", alt: 'User profile image', class: 'profile-pic')

  %div.account-details
    %h2 My Account
    %p
      %strong Username:
      = @user.username
    %p
    %strong Email:
    = @user.email
  - @user.addresses.each do |address|
    %div.address
      %p= address.shipping_address_1
      - if address.shipping_address_2.present?
        %p= address.shipping_address_2
      %p= "#{address.city}, #{address.state}, #{address.country} #{address.postal_code}"

  %div.navigation-section
    = form_tag search_path, method: :get do
      = hidden_field_tag @user.id, params[:user_id]
      = submit_tag "My Items for Sale", name: nil, class: 'button nav-button'


